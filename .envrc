# Suppress virtualenv deprecation warnings
export PYTHONWARNINGS="ignore::DeprecationWarning"

# Add .venv to PATH and set VIRTUAL_ENV with absolute paths
if [ -d .venv ]; then
    export PATH="$(pwd)/.venv/bin:$PATH"
    export VIRTUAL_ENV="$(pwd)/.venv"
fi

# Load .env file if it exists
if [ -f .env ]; then
    dotenv .env
fi
export ESPTOOL_PORT=$ATSMINI_PORT

# Set direnv indicator (bashrc will use this in prompt)
export DIRENV_ACTIVE=1
export DIRENV_PROJECT="ats-mini"
